<resources>

    <style name="CustomTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeMain" parent="CustomTheme.Base" />

    <style name="noWindowTranslucent" parent="AppTheme" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CustomTheme.Base"/>

</resources>
